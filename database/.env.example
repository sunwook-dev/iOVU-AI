# ============================================
# Modular Agents Environment Configuration
# ============================================
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-password-here
DB_NAME=modular_agents_db

# Database Pool Settings (Optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Web Crawler Settings
WEB_CRAWLER_MAX_DEPTH=10
WEB_CRAWLER_MAX_PAGES=2000
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
BROWSER_HEADLESS=true

# Instagram Crawler Settings
INSTAGRAM_USERNAME=your-instagram-username
INSTAGRAM_PASSWORD=your-instagram-password
INSTAGRAM_MAX_POSTS=100

# Naver Settings
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Performance Monitoring
SLOW_QUERY_THRESHOLD=1.0  # seconds
ENABLE_QUERY_LOGGING=false

# Cost Tracking
COST_ALERT_THRESHOLD_USD=100.0
DAILY_API_LIMIT=10000

# Development/Production Mode
ENVIRONMENT=development  # development, staging, production

# Redis Cache (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Proxy Settings (Optional)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Timezone
TZ=Asia/Seoul